<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anis.healthtracker.HeartRateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please enter your heart rate and date taken:"
        android:id="@+id/heart_rate_textview"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/hr_edittext"
        android:layout_below="@+id/heart_rate_textview"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp"
        android:maxLength="3"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Heart Rate :"
        android:id="@+id/hr_textview"
        android:layout_alignBottom="@+id/hr_edittext"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Systolic :"
        android:id="@+id/systolic_textview"
        android:layout_below="@+id/hr_textview"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/systolic_edittext"
        android:layout_alignBottom="@+id/systolic_textview"
        android:layout_alignParentEnd="true"
        android:maxLength="3"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Diastolic :"
        android:id="@+id/diastolic_textview"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/systolic_textview"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/diastolic_edittext"
        android:layout_alignBottom="@+id/diastolic_textview"
        android:layout_alignParentEnd="true"
        android:maxLength="3"
        android:text="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/hr_save_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/diastolic_edittext"
        android:layout_marginBottom="80dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/hr_date_edittext"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/hr_time_edittext"
        android:layout_below="@+id/hr_date_edittext"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
